<%- include('../partials/header'); %> 
<main class="main">
    <div class="container">
        <form action="/" class="form" method="post" id="form">
            <div class="titlediv">
                <label for="title">Title</label>
                <input type="text" name="title" id="fieldTitle" required>
            </div>
            <div class="ratingDiv">
                <label for="rating">Rating</label>
                <select name="rating" id="fieldRating" required>
                    <option value="NR">NR</option>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                    <option value="NC-17">NC-17</option>
                </select>
            </div>
            <div class="yearDiv">
               <label for="year">Year</label> 
               <input type="number" min="1900" max="<%= new Date().getFullYear() + 2 %>" name="year" id="fieldYear" required>
            </div>
            <div class="directorDiv">
                <label for="director">director</label>
                <input type="number" min="1" max="20" name="director" id="filmDirector">
            </div>
            <div class="userRatingDiv">
                <label for="User_rating">Rating</label>
                <select name="user_rating" id="user_rating" required>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <div class="runTimeDiv">
                <label for="run_time">Run runTimeDiv</label>
                <input type="number" name="hr" min="0" max="23" placeholder="23" class="run_time">
                <input type="number" name="min" min="0" max="59" placeholder="00" class="run_time">
            </div>
            <input type="submit" value="Submit Movie">
        </form>
        <div class="output" id="output"></div>
    </div>
</main>
<%- include('../partials/footer'); %> 

